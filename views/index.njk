    let line = new LeaderLine({
      start: document.getElementById('Photo_02'), 
      end: document.getElementById('Text_03'), 
      color: 'green',
      startPlug: 'square',
      endPlug: 'square'
    });

    let line2 = new LeaderLine({
      start: document.getElementById('Text_03'), 
      end: document.getElementById('Person_03'), 
      color: 'green',
      startPlug: 'square',
