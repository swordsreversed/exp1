$( function() {

  let divsize = 250;

	$( ".draggable" ).mousedown((event) => {
      if (devIce) {
          $(this).css('transform','scale(1)');
          $(event.currentTarget).css('transform','scale(1.6)');
          $(event.currentTarget).css("z-index", "1010"); 
      	}
    })

  $( ".draggable" ).draggable({
      containment: "#maincon",
      start: function(e) {
      	$('#cursor').find('img').attr('src','/images/04_Click-and-Drag-Alternative.png')
       	$(' body').css('cursor', 'none');
         $( ".draggable" ).each(function(index) {
          $(this).css("z-index", "1");
        });
        $('#cursor').css("z-index", "10210");
        $(this).css("z-index", "1010");
      },
      drag: function() {},
      stop: function() {
		if (!devIce) {
      		$('#cursor').find('img').attr('src','/images/03_Hover-OnClick-and-Drag_1282.png')
		} else {
			$(this).css('transform','scale(1)');
      		$('#cursor').find('img').attr('src','/images/clear.png')
        }
      }
    });

    $( ".draggable" ).each(function( index ) {
		var bodyWidth = document.body.clientWidth
		var bodyHeight = document.body.clientHeight;
		var randPosX = Math.floor((Math.random()*bodyWidth - divsize));
		var randPosY = Math.floor((Math.random()*bodyHeight - divsize));
		if (randPosX < 0) {
			randPosX += divsize;
		}
		if (randPosY < 0) {
			randPosY += divsize;
		}
		$(this).css('left', randPosX);
		$(this).css('top', randPosY);
      	$(this).removeClass('hidden')

    }); 
      $('#holder').removeClass('hidden')
   

    $( ".draggable" ).hover(function(){
		if (!devIce) {
      		$('#cursor').find('img').attr('src','/images/03_Hover-OnClick-and-Drag_1282.png')
		}
    }, function(){
		if (!devIce) {
        	$('#cursor').find('img').attr('src','/images/01_Neutral_128.png')
      	}
    });

});

